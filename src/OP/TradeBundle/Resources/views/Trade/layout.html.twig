{# src/OP/TradeBundle/Resources/views/layout.html.twig #}

{% extends "::layout.html.twig" %}


{% block title %}Musée du Louvre{% endblock %}

  {% block stylesheets %}
  {% endblock %}

        {% block current %}
          <li class="active"><a href="{{ path('op_trade_homepage') }}">Home</a></li>
          <li ><a href="{{ path('op_trade_billeterie') }}">Billeterie</a></li>
        {% endblock %}

{% block body %}
<div class="row">
<div id="myCarousel" class="carousel slide col-md-8 col-md-offset-2" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-lorenzo-de-ferrari-etude-de-naiade.jpg" alt="Los Angeles">
      <div class="carousel-caption">
        <h3>DESSINER LA GRANDEUR</h3>
        <p>Le dessin à Gênes à l'époque de la République</p>
      </div>
    </div>

    <div class="item">
      <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-corps-en-mouvement.jpg" alt="Chicago">
      <div class="carousel-caption">
        <h3>CORPS EN MOUVEMENT</h3>
        <p>La danse au musée</p>
      </div>    
    </div>

    <div class="item">
      <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-eugene-delacroix-bouquet-de-fleurs.jpg" alt="New York">
      <div class="carousel-caption">
        <h3>MAURICE DENIS ET EUGENE DELACROIX</h3>
        <p>De l'atelier au musée</p>
      </div>    
    </div>

    <div class="item">
      <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-louis-le-nain-famille-de-paysans.jpg" alt="New York">
      <div class="carousel-caption">
        <h3>LE MYSTERE LE NAIN</h3>
        <p>Musée du louvre-Lens</p>
      </div>       
    </div>

    <div class="item">
      <img src="http://www.louvre.fr/sites/default/files/imagecache/940x500/medias/medias_images/images/louvre-carrousel-saison-musique-2016-2017.jpg?" alt="New York">
      <div class="carousel-caption">
        <h3>SAISON MUSIQUE 2017-2018</h3>
        <p>Abonnez-vous !</p>
      </div> 

    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% endblock %}

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}
